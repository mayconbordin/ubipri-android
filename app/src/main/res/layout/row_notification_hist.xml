<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imgNotificationType"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_message_black_24dp"
        android:tint="@color/orange_logo"
        />

    <TextView
        android:id="@+id/txtNotificationsMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/txtNotificationsTime"
        android:layout_toLeftOf="@+id/txtNotificationsTime"
        android:layout_toEndOf="@+id/imgNotificationType"
        android:layout_toRightOf="@+id/imgNotificationType"
        android:layout_centerVertical="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@android:color/primary_text_light"
        android:maxLines="3"
        android:text="kj fkaj fkjsdah fkjashdfkjsah dkfh aslkdf halsidu fliasdu gfia sdfi sagdfuig sudfg usad gfuyasg dfuyg asudg fuasygd fuygas dfuyg usd gfuaysg dfu"
        />

    <TextView
        android:id="@+id/txtNotificationsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/tertiary_text_light"
        android:text="15 m"
        />

</RelativeLayout>