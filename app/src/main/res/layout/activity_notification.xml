<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/notificationHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:elevation="8dp"
        android:background="@android:color/white"
        >

        <ImageView
            android:id="@+id/imageViewNotification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_sms_black_24dp" />

        <TextView
            android:id="@+id/textViewNotificationFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageViewNotification"
            android:layout_toEndOf="@id/imageViewNotification"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SMS Message"
            android:textColor="@android:color/secondary_text_light"
            />

        <TextView
            android:id="@+id/textViewNotificationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNotificationFormat"
            android:layout_toRightOf="@+id/imageViewNotification"
            android:layout_toEndOf="@+id/imageViewNotification"
            android:text="13h00  Jan 1, 2015"
            android:textColor="@android:color/tertiary_text_light"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_below="@id/notificationHeader"
        android:background="@android:color/white"
        />

</RelativeLayout>