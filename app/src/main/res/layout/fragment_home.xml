<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_bg"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="0"
            >

            <TextView
                android:id="@+id/txtEnvironmentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Environment"
                android:enabled="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="18dp"
                android:layout_marginRight="25dp" />

            <TextView
                android:id="@+id/txtEnvironmentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Faculdade de Tecnologia Porto Alegre - FATEC"
                android:enabled="true"
                android:textSize="16dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/txtEnvironmentLabel"
                android:layout_toEndOf="@+id/txtEnvironmentLabel"
                android:textAlignment="center"
                android:gravity="center"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/txtSettingsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Settings"
                android:enabled="true"
                android:textStyle="bold"
                android:textColor="#a9a9a9"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="14dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/border_gray"
                android:layout_marginLeft="15dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/txtSettingsLabel"
                android:layout_toEndOf="@+id/txtSettingsLabel"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <ListView
            android:id="@+id/listFunctionalities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:paddingBottom="20dp"
            android:clipToPadding="false"
            />

    </GridLayout>

</RelativeLayout>